<h1>Create New Artists</h1>

<% if flash[:artist_errors] %>
<% flash[:artist_errors].each do |error|%>
<p><%= error %></p>
<% end %>
<% end %>

<%= form_for @artist do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :age %>
<%= f.number_field :age %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :instrument_id %>
<%= f.collection_select :instrument_ids, Instrument.all,  :id, :name %>

<%= f.submit %>
<% end %>
